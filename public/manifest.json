{
  "name": "Kirsten & Dale Wedding Photos",
  "short_name": "Wedding Photos",
  "description": "Share and view beautiful memories from Kirsten & Dale's special day",
  "start_url": "/upload",
  "display": "standalone",
  "background_color": "#faf8f5",
  "theme_color": "#d4af37",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["photo", "social", "lifestyle"],
  "icons": [
    {
      "src": "/icons/icon-72.svg",
      "sizes": "72x72",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-96.svg",
      "sizes": "96x96",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-128.svg",
      "sizes": "128x128",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-144.svg",
      "sizes": "144x144",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-152.svg",
      "sizes": "152x152",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384.svg",
      "sizes": "384x384",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-upload.svg",
      "sizes": "1280x800",
      "type": "image/svg+xml",
      "platform": "wide",
      "label": "Upload photos on desktop"
    },
    {
      "src": "/screenshots/mobile-upload.svg",
      "sizes": "390x844",
      "type": "image/svg+xml",
      "platform": "narrow",
      "label": "Upload photos on mobile"
    },
    {
      "src": "/screenshots/mobile-gallery.svg",
      "sizes": "390x844",
      "type": "image/svg+xml",
      "platform": "narrow",
      "label": "View photo gallery"
    }
  ],
  "shortcuts": [
    {
      "name": "Upload Photos",
      "short_name": "Upload",
      "description": "Quickly upload wedding photos",
      "url": "/upload",
      "icons": [
        {
          "src": "/icons/upload-shortcut.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "View Gallery",
      "short_name": "Gallery",
      "description": "Browse wedding photo gallery",
      "url": "/gallery",
      "icons": [
        {
          "src": "/icons/gallery-shortcut.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+weddingphotos",
      "url": "/upload?source=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".heic", ".heif"]
      }
    }
  ]
}