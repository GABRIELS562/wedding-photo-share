# Production Environment Variables for Kirsten & Dale Wedding Photo Share
# Copy this file to .env.production and fill in your values

# ====================
# CLOUDINARY CONFIGURATION
# ====================
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
VITE_CLOUDINARY_UPLOAD_PRESET=kirsten_dale_wedding_preset
VITE_CLOUDINARY_API_KEY=your_api_key_here
VITE_CLOUDINARY_API_SECRET=your_api_secret_here

# ====================
# WEDDING CONFIGURATION
# ====================
# Event details
VITE_EVENT_NAME="Kirsten & Dale"
VITE_EVENT_DATE="October 12, 2024"
VITE_EVENT_LOCATION="Rosewood Manor, Cape Town"

# Upload settings
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_UPLOADS_PER_SESSION=20
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Features
VITE_REQUIRE_NAME=true
VITE_ENABLE_CAPTIONS=true
VITE_AUTO_APPROVE=false
VITE_ENABLE_DOWNLOADS=true

# ====================
# ADMIN CONFIGURATION
# ====================
# Admin panel access - use a strong password!
VITE_ADMIN_PASSWORD=your_very_secure_admin_password_here

# ====================
# APPLICATION SETTINGS
# ====================
# Production URL
VITE_APP_URL=https://photos.jagdevops.co.za

# Environment
NODE_ENV=production

# ====================
# DEPLOYMENT SETTINGS
# ====================
# Domain configuration
DOMAIN=photos.jagdevops.co.za

# SSL email for Let's Encrypt
SSL_EMAIL=admin@jagdevops.co.za

# Redis password (if using Redis)
REDIS_PASSWORD=wedding2024_secure_redis_password

# ====================
# MONITORING & NOTIFICATIONS
# ====================
# Webhook URL for deployment notifications (optional)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Log level
LOG_LEVEL=info

# ====================
# SECURITY SETTINGS
# ====================
# Session settings
SESSION_SECRET=your_session_secret_here_make_it_long_and_random

# CORS origins (comma-separated)
CORS_ORIGINS=https://photos.jagdevops.co.za,https://jagdevops.co.za

# ====================
# BACKUP CONFIGURATION
# ====================
# Backup retention (days)
BACKUP_RETENTION_DAYS=7

# ====================
# PERFORMANCE SETTINGS
# ====================
# Cache settings
CACHE_MAX_AGE=31536000

# Image optimization
IMAGE_QUALITY=auto:good
IMAGE_FORMAT=auto

# ====================
# NOTES
# ====================
# 1. Never commit this file to version control
# 2. Use strong, unique passwords
# 3. Regularly rotate API keys and secrets
# 4. Monitor Cloudinary usage to avoid overage charges
# 5. Test all settings in staging before production deployment